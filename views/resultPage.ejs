<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ResultPage | <%= city %> </title>
    <link href="../css/styles.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="dim">
    <header>
        <h1 id="page-title">
            <%= city.toUpperCase() %> 
        </h1>
    </header>
    <main>
        <div class="flex-container">
            
            <section id="most-common-crimes">
                <h2>De fem mest vanliga brotten i området</h2>
                <% let index = 0;  %> 
                <% for(let key in statistic) { %>
                    <ul>
                        <% if(index < 5)  {%> 
                        <li><%= key %>  : <%= statistic[key] %> </li>
                        <% index ++ } %> 
                    </ul>
                <% }; %>      
            </section>
            <section id="crimes-count">
                <h2>Antal brott</h2>
                <div class="crimes-count-display">
                    <p>Idag: <%= crimeCount.day %> </p>
                </div>
                <div class="crimes-count-display">
                    <p>Senaste 7 dagarna: <%= crimeCount.week %> </p>
                </div>
                <div class="crimes-count-display">
                    <p>Senaste 30 dagarna: <%= crimeCount.month %> </p>
                </div>
            </section>
            <section id="average-pay">
                <h2>Genomsnittlig månadslön i <br><%= city %> är <%= income %> </h2>              
            </section>
        </div>
    
        <section id="police-data">
            <table>
                <tr id="table-header">
                    <th>Typ av brott</th>
                    <th>Plats</th>
                    <th>Tid</th>
                    <th>Beskrivning</th>
                </tr>
                <% data[0].forEach(function(dat) { %>
                    <tr>
                    <td><%= dat.type %></td>
                    <td><%= dat.place%></td>
                    <td><%= dat.date%></td>
                    <td><%= dat.description%></td>
                    <td class="share-link" id="<%= dat.id %>">Dela</td>
                    </tr>
                <% }); %>
            </table>
        </section>
    </div>
        <section id="share-popup">
            <div>
                <p>Who do you want to send this to?</p>
            </div>
            <form action="" id="share-form">
                <input type="text" id="receiver">
                <input type="submit">
            </form>
        </section>
    </main>

    <script>
        let links = document.getElementsByClassName("share-link");

        var myFunction = function() {
            let body = document.querySelector('#dim');
            body.style.opacity = '50%';
            let popup = document.querySelector('#share-popup');
            popup.style.display = 'flex';
            let attribute = this.getAttribute('id');
            window.scrollTo(0, 0);
        };

        for (var i = 0; i < links.length; i++) {
            links[i].addEventListener('click', myFunction, false);
        }
    </script>
</body>
</html>

      